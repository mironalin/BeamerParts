# BeamerParts - Neon PostgreSQL Environment Variables
# Copy this file to .env and fill in your Neon database URLs

# ===== NEON POSTGRESQL DATABASES =====
# User Service Database
NEON_USER_DB_URL=postgresql://[username]:[password]@[hostname]/[database]?sslmode=require
NEON_USER_DB_USERNAME=neondb_owner
NEON_USER_DB_PASSWORD=your_neon_password

# Vehicle Service Database  
NEON_VEHICLE_DB_URL=postgresql://[username]:[password]@[hostname]/[database]?sslmode=require
NEON_VEHICLE_DB_USERNAME=neondb_owner
NEON_VEHICLE_DB_PASSWORD=your_neon_password

# Product Service Database
NEON_PRODUCT_DB_URL=postgresql://[username]:[password]@[hostname]/[database]?sslmode=require
NEON_PRODUCT_DB_USERNAME=neondb_owner
NEON_PRODUCT_DB_PASSWORD=your_neon_password

# ===== REDIS (Cloud Alternative) =====
# Option 1: Redis Cloud (recommended) - https://redis.com/redis-enterprise-cloud/
REDIS_HOST=redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com
REDIS_PORT=12345
REDIS_PASSWORD=your_redis_cloud_password

# Option 2: Upstash Redis - https://upstash.com/
# REDIS_HOST=usw1-steady-mouse-12345.upstash.io
# REDIS_PORT=6379
# REDIS_PASSWORD=your_upstash_password

# ===== RABBITMQ (Cloud Alternative) =====
# Option 1: CloudAMQP (recommended) - https://www.cloudamqp.com/
RABBITMQ_HOST=duck.rmq.cloudamqp.com
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=your_cloudamqp_username
RABBITMQ_PASSWORD=your_cloudamqp_password

# Option 2: AWS SQS (if you prefer AWS)
# AWS_SQS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ===== APPLICATION SETTINGS =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production-environment

# ===== SERVICE URLS =====
USER_SERVICE_URL=http://localhost:8081
VEHICLE_SERVICE_URL=http://localhost:8082
PRODUCT_SERVICE_URL=http://localhost:8083
